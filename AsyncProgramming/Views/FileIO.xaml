<Page x:Class="AsyncProgramming.Views.FileIO"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AsyncProgramming.Views"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="FileIO">

    <Grid>
        <StackPanel>
            <TextBox x:Name="txtContents" HorizontalAlignment="Left" Height="137" TextWrapping="Wrap" VerticalAlignment="Top" Width="497"/>
            <StackPanel Orientation="Horizontal">
                <Button x:Name="btnReadFile" Content="Read File" HorizontalAlignment="Left" Margin="5" Width="75" Click="btnReadFile_Click"/>

                <Button x:Name="btnWriteFile" Content="Add some text then click to save" HorizontalAlignment="right" Margin="5"  Width="180" Click="btnWriteFile_Click"/>
            </StackPanel>
        </StackPanel>

    </Grid>
</Page>
